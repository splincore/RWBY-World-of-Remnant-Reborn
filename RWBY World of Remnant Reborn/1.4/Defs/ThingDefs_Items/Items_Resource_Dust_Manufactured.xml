<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ResourceBase">
		<defName>FireDustPowder</defName>
		<label>powdered Fire Dust</label>
		<description>Fire Dust in powdered form and stored in a vial. Highly explosive.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Item/Resource/Manufactured_Fire_Dust_Powder</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>75</stackLimit>
		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
			<MarketValue>0.5</MarketValue>
			<Mass>0.01</Mass>
			<Flammability>0.6</Flammability>
		</statBases>
		<intricate>true</intricate>
		<thingCategories>
			<li>DustPowder</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>1.1</explosiveRadius>
				<explosiveDamageType>Bomb_Fire</explosiveDamageType>
				<explosiveExpandPerStackcount>0.037</explosiveExpandPerStackcount>
				<startWickOnDamageTaken>
					<li>Flame</li>
				</startWickOnDamageTaken>
				<startWickHitPointsPercent>0.9</startWickHitPointsPercent>
				<wickTicks>
					<min>0</min>
					<max>0</max>
				</wickTicks>
			</li>
		</comps>
	</ThingDef>

