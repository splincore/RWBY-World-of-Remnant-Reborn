<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="AbilityBuildingBase">
		<defName>Blake_ShadowClone</defName>
		<label>shadow clone</label>
		<description>A shadow clone of a certain semblance.</description>
		<thingClass>Building</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>40</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.65</fillPercent>
		<useHitPoints>false</useHitPoints>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Projectile/Empty_Projectile</texPath>
		</graphicData>
		<rotatable>false</rotatable>
		<tickerType>Normal</tickerType>
		<drawDamagedOverlay>false</drawDamagedOverlay>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Beauty>0</Beauty>
			<WorkToBuild>1</WorkToBuild>
			<MarketValue>0</MarketValue>
		</statBases>
		<comps>
			<li Class="RWBYRemnant.CompProperties_ShadowClone"/>
		</comps>
		<forceDebugSpawnable>false</forceDebugSpawnable>
		<building>
			<expandHomeArea>false</expandHomeArea>
			<repairable>false</repairable>
			<isInert>true</isInert>
		</building>
	</ThingDef>

